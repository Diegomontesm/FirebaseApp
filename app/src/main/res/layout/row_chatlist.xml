<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="3dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <!-- IMAGEVIEW: User profile Image -->
        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/profileIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_default_img_darkblue"/>

        <!-- IMAGEVIEW: Online/Offline status-->
        <ImageView
            android:id="@+id/onlineStatusIv"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <!-- TEXTVIEW : Username-->
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su nombre"
            android:layout_marginStart="4dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_toEndOf="@id/profileIv"
            android:layout_toRightOf="@id/profileIv"
            android:layout_marginLeft="4dp" />
        <!-- TEXTVIEW: último mensaje(by sender/receiver) -->
        <TextView
            android:id="@+id/lastMessageTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Última conexión a las: "
            android:maxLines="2"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/profileIv"
            android:layout_toRightOf="@id/profileIv"
            android:layout_below="@id/nameTv"
            android:layout_marginLeft="4dp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>