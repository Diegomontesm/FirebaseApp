<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

    <!--EDITTEXT: Ingrese el titulo del post/estado -->
    <EditText
        android:id="@+id/pTitleEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Ingrese el título de la publicación"
        android:singleLine="true"
        android:background="@drawable/editextstyle" />

    <!--IMAGEVIEW: Ingrese la imagen del post -->
    <ImageView
        android:id="@+id/pImageIv"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp" />


    <!--EDITTEXT: Ingrese la descripcion del post/estado -->
    <EditText
        android:id="@+id/pDescriptionEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Ingrese una descripción de la publicación"
        android:inputType="textCapSentences|textMultiLine"
        android:minHeight="120dp"
        android:gravity="start"
        android:background="@drawable/editextstyle" />


    <!--BUTTON: Publicar post en FIREBASE -->
    <Button
        android:id="@+id/pUploadBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicar"
        android:layout_gravity="end"
        style="@style/Widget.AppCompat.Button.Colored"/>
    </LinearLayout>
</ScrollView>